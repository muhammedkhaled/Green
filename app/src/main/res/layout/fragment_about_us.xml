    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <TextView
        android:id="@+id/aboutUsTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_32sdp"
        android:text="@string/about_us"
        style="@style/TextViewHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_h1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App20Percent"
        android:layout_width="350dp"
        android:layout_height="215dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUsTitle_tv"
        app:srcCompat="@drawable/landing1" />

    <TextView
        android:id="@+id/Instructions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Instructions"
        android:textColor="@color/emerald_light"
        style="@style/TextViewHeader"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
        app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
        app:layout_constraintTop_toBottomOf="@+id/Instructions_title"
        android:layout_marginTop="@dimen/_8sdp">

        <TextView
            android:id="@+id/aboutUs_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewContent"
            android:text="Start by taking the 4 raspberries, chop them into tiny segments and introduce the strawberry. Check to make sure that the raspberries and the strawberry sit well together, before slicing and dicing a lemon and adding it to this rather strange combination of fruits.
