<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="115dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/caseDonation_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:trackThickness="4dp"
                android:progress="52"
                android:max="100"
                app:indicatorColor="@color/emerald"
                app:trackColor="@color/whisper"
                app:indicatorSize="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/results_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52%"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/caseDonation_progress"
                app:layout_constraintEnd_toEndOf="@+id/caseDonation_progress"
                app:layout_constraintStart_toStartOf="@+id/caseDonation_progress"
                app:layout_constraintTop_toTopOf="@+id/caseDonation_progress" />

            <TextView
                android:id="@+id/donationCaseName_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="محمد السيد على"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/caseDonation_progress"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/titleTotalCost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/amount_of_surgery"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/titleRemainCost_tv"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/caseDonation_progress"
                app:layout_constraintStart_toStartOf="@id/donationCaseName_tv"
                app:layout_constraintTop_toBottomOf="@id/donationCaseName_tv" />

            <TextView
                android:id="@+id/totalCost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="240 الف"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/titleTotalCost_tv"
                app:layout_constraintStart_toStartOf="@+id/titleTotalCost_tv"
                app:layout_constraintTop_toBottomOf="@+id/titleTotalCost_tv"
                android:textColor="@color/emerald_light"/>

            <TextView
                android:id="@+id/titleRemainCost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="@string/amount_of_surgery"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/titleTotalCost_tv"
                app:layout_constraintTop_toBottomOf="@id/donationCaseName_tv" />

            <TextView
                android:id="@+id/remainCost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="120 الف"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/titleRemainCost_tv"
                app:layout_constraintStart_toStartOf="@+id/titleRemainCost_tv"
                app:layout_constraintTop_toBottomOf="@+id/titleRemainCost_tv"
                android:textColor="@color/orange"/>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="اعانك الله على الخير تبرع مره اخرى"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="@+id/totalCost_tv"
                app:layout_constraintTop_toBottomOf="@+id/totalCost_tv" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:background="@drawable/circular"
                android:src="@drawable/ic_arrow_forward"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/remainCost_tv" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</FrameLayout>