<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_32sdp"
    android:layout_marginEnd="@dimen/_32sdp">

<!--    todo expendded item when click on needNumber_tv  -->

    <TextView
        android:id="@+id/needNumber_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/gray"
        android:drawablePadding="@dimen/_8sdp"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rectangle_shape"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/orderNeeds_constL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/needNumber_tv"
        app:layout_constraintStart_toStartOf="@id/needNumber_tv"
        app:layout_constraintEnd_toEndOf="@id/needNumber_tv"
        android:visibility="gone">

<!-- todo set drawable accordingly to state -->
        <TextView
            android:id="@+id/orderNeedsState_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/gray"
            android:drawablePadding="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>